{% if component.icon or component.title or component.description %}
  <div class="announcement-bar flex items-center justify-center gap-2 text-white py-2 px-4"
       style="background-color: {{ component.color ?? '#004956' }}">
       
    {# ✅ الأيقونة #}
    {% if component.icon %}
      <span class="{{ component.icon }} text-xl"></span>
    {% endif %}

    {# ✅ النص الكامل مع الرابط #}
    {% if component.url %}
      <a href="{{ component.url }}" 
         class="mx-2 underline"
         {% if component.target == '_blank' %} target="_blank" {% endif %}>
        {{ component.title }} - {{ component.description }}
      </a>
    {% else %}
      <span class="mx-2">{{ component.title }} - {{ component.description }}</span>
    {% endif %}

    {# ✅ زر إغلاق إذا تم تمرير close_url #}
    {% if component.close_url %}
      <button onclick="window.location.href='{{ component.close_url }}'" 
              class="ml-auto text-white text-sm hover:opacity-70">
        <i class="sicon-close"></i>
      </button>
    {% endif %}
  </div>
{% endif %}
